<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#7B97B2"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="10dp"></LinearLayout>

    <LinearLayout
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="5dp"
        android:layout_alignParentBottom="true">
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardBackgroundColor="#FFF">

            <Button
                android:id="@+id/registerbtn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/rounded_corner"
                android:text="Update"
                android:textAllCaps="false"
                android:textColor="#000000"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:textSize="18sp"
                />


        </android.support.v7.widget.CardView>
    </LinearLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/layout"
        android:layout_above="@id/footer">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/layoutmobile4"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/edit_roundedcorner">
                <EditText
                    android:id="@+id/academicET"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:text="MBBS"
                    android:layout_marginLeft="10dp"
                    android:textColor="#7F112548"
                    />
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select State"
                android:layout_marginTop="10dp"
                android:textColor="#FFF"
                android:layout_marginLeft="35dp"
                android:layout_marginRight="35dp"
                />

            <LinearLayout
                android:id="@+id/layoutmobile1"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/edit_roundedcorner">
                <AutoCompleteTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/edit_ip1"
                    android:background="@null"
                    android:hint="State"
                    android:singleLine="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:imeOptions="actionNext"
                    android:textSize="15dp" />
                <Spinner
                    android:layout_marginRight="40dp"
                    android:layout_width="30dp"
                    android:layout_height="45dp"
                    android:id="@+id/spitem1"
                    android:spinnerMode="dropdown"></Spinner>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select City"
                android:layout_marginTop="10dp"
                android:textColor="#FFF"
                android:layout_marginLeft="35dp"
                android:layout_marginRight="35dp"
                />


            <LinearLayout
                android:id="@+id/layoutmobile2"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/edit_roundedcorner">
                <AutoCompleteTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/edit_ip2"
                    android:background="@null"
                    android:hint="City"
                    android:singleLine="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:textSize="15dp" />
                <Spinner
                    android:layout_marginRight="40dp"
                    android:layout_width="30dp"
                    android:layout_height="45dp"
                    android:id="@+id/spitem2"
                    android:spinnerMode="dropdown"></Spinner>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select College"
                android:layout_marginTop="10dp"
                android:textColor="#FFF"
                android:layout_marginLeft="35dp"
                android:layout_marginRight="35dp"
                />

            <LinearLayout
                android:id="@+id/layoutmobile"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/edit_roundedcorner">

                <AutoCompleteTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/edit_ip"
                    android:background="@null"
                    android:singleLine="true"
                    android:hint="College Name"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:textSize="15dp" />
                <Spinner
                    android:layout_marginRight="40dp"
                    android:layout_width="30dp"
                    android:layout_height="45dp"
                    android:id="@+id/spinner_ip"
                    android:spinnerMode="dropdown"
                   ></Spinner>
            </LinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Year Of Admission"
                android:layout_marginTop="10dp"
                android:textColor="#FFF"
                android:layout_marginLeft="35dp"
                android:layout_marginRight="35dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/edit_roundedcorner2">

                <EditText
                    android:id="@+id/Yearadmission"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:background="@null"
                    android:hint="Year Admission"
                    android:textSize="15dp"
                    android:singleLine="true"
                    android:textColorHint="#7F112548"
                    android:inputType="number" />
            </LinearLayout>




            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date Of University Degree Certificate"
                android:layout_marginTop="10dp"
                android:textColor="#FFF"
                android:layout_marginLeft="35dp"
                android:layout_marginRight="35dp"
                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/edit_roundedcorner2">

                <EditText
                    android:id="@+id/ETYear"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:background="@null"
                    android:hint="Date Of University Degree Certificate"
                    android:singleLine="true"
                    android:textSize="15dp"
                    android:textColorHint="#7F112548"
                    android:inputType="number" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date Of Registration Certificate"
                android:layout_marginTop="10dp"
                android:textColor="#FFF"
                android:layout_marginLeft="35dp"
                android:layout_marginRight="35dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/edit_roundedcorner2">

                <EditText
                    android:id="@+id/ETDegreeCertificateDate"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:background="@null"
                    android:hint="Date of Registration Certificate"
                    android:textSize="15dp"
                    android:singleLine="true"
                    android:textColorHint="#7F112548"
                    android:inputType="number" />
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Next Renewal Date of Medical Council"
                android:layout_marginTop="10dp"
                android:textColor="#FFF"
                android:layout_marginLeft="35dp"
                android:layout_marginRight="35dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/edit_roundedcorner2">

                <EditText
                    android:id="@+id/renewalcertificate"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:background="@null"
                    android:hint="Select Next Renewal Date of Medical Council"
                    android:textSize="13dp"
                    android:singleLine="true"
                    android:textColorHint="#7F112548"
                    android:inputType="textEmailAddress"
                    />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>


</RelativeLayout>