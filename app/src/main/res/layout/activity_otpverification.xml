<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="#7B97B2"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#7B97B2"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="450dp"
                app:cardCornerRadius="4dp"
                app:cardBackgroundColor="#fff"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">

                <TextView
                    android:id="@+id/close"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Close"
                    android:layout_marginTop="20dp"
                    android:layout_gravity="end"
                    android:layout_marginRight="10dp"
                    android:textColor="#EC1528"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Verify your Identity"
                    android:layout_marginTop="80dp"
                    android:layout_gravity="center_horizontal"
                    android:textSize="20dp"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Please enter the 4 digit OTP received via SMS"
                    android:layout_marginTop="125dp"
                    android:layout_gravity="center_horizontal"
                    android:textSize="16dp"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="270dp"
                    android:layout_marginTop="165dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:weightSum="3"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.95"
                        android:layout_marginTop="25dp"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="63dp"
                            android:orientation="horizontal"
                            android:weightSum="7"
                            android:layout_gravity="center">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="0.92"
                                android:background="@drawable/edit_circle"
                                android:orientation="vertical">
                                <EditText
                                    android:id="@+id/editvalue1"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:hint="0"
                                    android:textAlignment="center"
                                    android:textSize="25dp"
                                    android:textColor="#112548"
                                    android:textColorHint="#7F112548"
                                    android:background="@null"
                                    android:layout_marginLeft="25dp"
                                    android:layout_marginRight="25dp"
                                    android:inputType="number"
                                    android:singleLine="true"
                                    android:maxLength="1"
                                    android:imeOptions="actionNext"
                                    />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1.11"
                                android:orientation="vertical"></LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="0.92"
                                android:background="@drawable/edit_circle"
                                android:orientation="vertical">
                                <EditText
                                    android:id="@+id/editvalue2"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:hint="0"
                                    android:textColorHint="#7F112548"
                                    android:textAlignment="center"
                                    android:textSize="25dp"
                                    android:textColor="#112548"
                                    android:layout_marginLeft="25dp"
                                    android:layout_marginRight="25dp"
                                    android:background="@null"
                                    android:inputType="number"
                                    android:maxLength="1"
                                    android:imeOptions="actionNext"
                                    />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1.11"
                                android:orientation="vertical"></LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="0.92"
                                android:background="@drawable/edit_circle"
                                android:orientation="vertical">
                                <EditText
                                    android:id="@+id/editvalue3"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:hint="0"
                                    android:textColorHint="#7F112548"
                                    android:textAlignment="center"
                                    android:textSize="25dp"
                                    android:textColor="#112548"
                                    android:layout_marginLeft="25dp"
                                    android:layout_marginRight="25dp"
                                    android:background="@null"
                                    android:inputType="number"
                                    android:maxLength="1"
                                    android:imeOptions="actionNext"
                                    />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1.11"
                                android:orientation="vertical"></LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="0.92"
                                android:background="@drawable/edit_circle"
                                android:orientation="vertical">
                                <EditText
                                    android:id="@+id/editvalue4"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:hint="0"
                                    android:textColorHint="#7F112548"
                                    android:textAlignment="center"
                                    android:textSize="25dp"
                                    android:textColor="#112548"
                                    android:layout_marginLeft="25dp"
                                    android:layout_marginRight="25dp"
                                    android:background="@null"
                                    android:inputType="number"
                                    android:maxLength="1"
                                    android:imeOptions="actionNext"
                                    />
                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_gravity="center">
                            <Button
                                android:id="@+id/verifybtn"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/bg_button_rounded"
                                android:text="Verify"
                                android:textAllCaps="false"
                                android:textSize="18dp"
                                android:textColor="#000000"
                                />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1.25"

                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:weightSum="2">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:layout_weight="1">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Haven't received OTP?"
                                    android:textColor="#000000"
                                    android:layout_gravity="start"
                                    android:layout_marginTop="20dp"
                                    android:textSize="15dp"
                                    />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:layout_weight="1">
                                <Button
                                    android:id="@+id/resendOtp"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/edit_roundedcornerbackgroundgray"
                                    android:text="Resend OTP"
                                    android:textAllCaps="false"
                                    android:textColor="#7F112548"
                                    />
                            </LinearLayout>
                                                    </LinearLayout>

                    </LinearLayout>



                </LinearLayout>



            </android.support.v7.widget.CardView>





        </LinearLayout>
    </ScrollView>


</LinearLayout>